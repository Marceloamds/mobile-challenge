<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="originCurrencyText"
            type="String" />

        <variable
            name="destinationCurrencyText"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_converted_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,18"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/text_view_converted_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DÃ³lares Americanos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_converted_value" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_destination_coin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_layout_origin_coin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_destination_coin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_origin_coin"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_converted_currency">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_origin_coin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <include
            android:id="@+id/origin_coin_chooser"
            layout="@layout/layout_currency_chooser"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:currencyText="@{originCurrencyText}"
            app:layout_constraintBottom_toBottomOf="@id/text_layout_origin_coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_layout_origin_coin"
            app:layout_constraintTop_toTopOf="@id/text_layout_origin_coin" />

        <include
            android:id="@+id/destination_coin_chooser"
            layout="@layout/layout_currency_chooser"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:currencyText="@{destinationCurrencyText}"
            app:layout_constraintBottom_toBottomOf="@id/text_layout_destination_coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_layout_destination_coin"
            app:layout_constraintTop_toTopOf="@id/text_layout_destination_coin" />

        <Button
            android:id="@+id/button_convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Converter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_layout_destination_coin" />

        <com.btg.converter.presentation.util.placeholder.PlaceholderView
            android:id="@+id/placeholder_view"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>